$colorBlack: #000000;
$colorWhite: #ffffff;
$colorBlue: #05117F;
$colorGray: #464646;
$colorDarkGray: #262c3e;

.modal {
    position: fixed;
    inset: 0;
    z-index: 101;
}

.modal-overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0,0,0,.5);
    &:empty {
        display: block;
    }
}

.modal-box {
    transform: translate3d(0, 0, 0);
    backface-visibility: hidden;
    position: relative;
    z-index: 2;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    &:before,
    &:after {
        content: "";
        flex: 0 0 0;
        margin: auto
    }
}

.modal-inner {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    max-width: 918px;
    width: 100%;
    padding: 40px;
    background-color: $colorWhite;
    position: relative;
    z-index: 2;
    overflow-y: scroll;
    -ms-overflow-style: none;
    scrollbar-width: none;
    &::-webkit-scrollbar {
        display: none
    }
}

.modal-img {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 14px;
    color: $colorGray;
    text-align: center;
    max-width: 411px;
    width: 100%;
    img {
        object-fit: cover;
        object-position: center;
        width: 100%;
        height: 100%;
    }
}

.modal-close {
    position: absolute;
    right: 40px;
    top: 40px;
    z-index: 2;
    svg path {
        transition: .3s opacity;
    }
    @media (hover: hover) {
        cursor: pointer;
        &:hover {
            svg path {
                opacity: .5;
            }
        }
    }
}

.modal-title {
    font-weight: 700;
    font-size: 24px;
    line-height: 100%;
    color: $colorBlue;
    margin-bottom: 32px;
    padding-right: 40px;
    text-transform: uppercase;
}

.modal-subtitle {
    font-weight: 400;
    font-size: 14px;
    line-height: 143%;
    color: $colorGray;
    margin-bottom: 10px;
    span {
        font-weight: 700;
        font-size: 20px;
    }
}

.modal-save {
    color: $colorBlack;
    font-weight: 400;
    font-size: 14px;
    line-height: 143%;
    margin-bottom: 32px;
    span {
        font-weight: 700;
        font-size: 18px;
        line-height: 133%;
        color: $colorBlue;
    }
}

.modal-products {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 32px;
}

.modal-products-item {
    display: flex;
    align-items: flex-start;
    gap: 10px;
}

.modal-products-item-img {
    width: 88px;
    flex-shrink: 0;
    img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        object-position: center;
    }
}

.modal-products-item-info {

}

.modal-products-item-title {
    font-weight: 700;
    font-size: 14px;
    line-height: 171%;
    color: #262c3e;
    text-decoration: none;
    transition: .3s color;
    @media (hover: hover) {
        &:hover {
            color: $colorBlue;
            text-decoration: underline;
        }
    }
}

.modal-products-item-desc {
    font-weight: 400;
    font-size: 12px;
    line-height: 133%;
    color: $colorBlack;
}

.modal-products-item-sku {
    font-weight: 400;
    font-size: 12px;
    line-height: 117%;
    color: #666;
    margin: 11px 0;
}

.modal-products-item-price {
    display: flex;
    align-items: center;
    gap: 10px;
    span {
        white-space: nowrap;
        &:nth-child(1) {
            font-weight: 700;
            font-size: 18px;
            line-height: 133%;
            color: $colorBlue;
        }
        &:nth-child(2) {
            font-weight: 400;
            font-size: 18px;
            line-height: 133%;
            text-decoration: line-through;
            color: #666;
        }
    }
}
